<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    tools:context=".Vista.EditarMascotaActivity"
    android:background="@color/yellow">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lYSuperiorEditarMascota"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarEditarMascota"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/ic_retroceder"
            android:clickable="true"
            android:backgroundTint="@color/lila"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloEditarMascota"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lila"
            android:text="Editar mascota"/>

        <View
            android:id="@+id/viewTituloEditarMascota"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloEditarMascota"
            android:background="@color/yellow" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lYSuperiorEditarMascota">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollEditarMascota">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/bordes_fragment">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tVEncFotoMascotaEditar"
                    android:text="Foto de la mascota"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/iVFotoMascotaEditar"
                    android:layout_below="@id/tVEncFotoMascotaEditar"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lYBotonesEditarFotoMascota"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/border"
                    android:padding="10dp"
                    android:layout_below="@+id/iVFotoMascotaEditar"
                    android:gravity="center">

                    <!-- Botón para tomar una foto -->
                    <Button
                        android:id="@+id/btnTomarFotoMascotaEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomar foto"
                        android:layout_marginEnd="5dp"/>

                    <!-- Botón para seleccionar una foto desde la galería -->
                    <Button
                        android:id="@+id/btnSeleccionarFotoMascotaEditar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Subir una foto" />

                </LinearLayout>

                <View
                    android:id="@+id/viewSeparadorEditarMascota"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/lYBotonesEditarFotoMascota"/>

                <TextView
                    android:id="@+id/tVEncabezadoDetallesMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewSeparadorEditarMascota"
                    android:padding="6dp"
                    android:text="Información general"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="15dp"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/tVNombreMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVEncabezadoDetallesMascota"
                    android:padding="6dp"
                    android:text="Nombre:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/eTEditarNombreMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVNombreMascotaEditar"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese el nombre de la mascota"
                    android:inputType="text|textPersonName"
                    android:padding="6dp"
                    android:maxLength="50"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚñÑ123456789 "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tVEspecieMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eTEditarNombreMascota"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Especie:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spEspecieMascotaEditar"
                    android:background="@drawable/border"
                    android:padding="0dp"
                    android:layout_below="@id/tVEspecieMascotaEditar"/>


                <TextView
                    android:id="@+id/tVEdadMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spEspecieMascotaEditar"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Edad:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spEdadMascotaEditar"
                    android:background="@drawable/border"
                    android:padding="0dp"
                    android:layout_below="@id/tVEdadMascotaEditar"/>

                <TextView
                    android:id="@+id/tVSexoMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spEdadMascotaEditar"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="6dp"
                    android:text="Sexo:"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spSexoMascotaEditar"
                    android:background="@drawable/border"
                    android:padding="0dp"
                    android:layout_below="@id/tVSexoMascotaEditar"/>

                <TextView
                    android:id="@+id/tVColorMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/spSexoMascotaEditar"
                    android:padding="6dp"
                    android:text="Color:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/eTEditarColorMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVColorMascotaEditar"
                    android:ems="10"
                    android:hint="Ingrese el color de la mascota"
                    android:inputType="text|textPersonName"
                    android:padding="6dp"
                    android:textSize="16sp"
                    android:maxLength="30"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚñÑ "
                    android:background="@drawable/border"/>

                <TextView
                    android:id="@+id/tVRazaMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/eTEditarColorMascota"
                    android:padding="6dp"
                    android:text="Raza:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/eTEditarRazaMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVRazaMascotaEditar"
                    android:ems="10"
                    android:hint="Ingrese la raza de la mascota"
                    android:inputType="text|textPersonName"
                    android:padding="6dp"
                    android:textSize="16sp"
                    android:maxLength="50"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚñÑ "
                    android:background="@drawable/border"/>

                <TextView
                    android:id="@+id/tvCaracterMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eTEditarRazaMascota"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Carácter de la mascota:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/eTEditarCaracterMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCaracterMascotaEditar"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ejemplo: Luna es una cachorra juguetona y muy cariñosa. Le encanta correr y es perfecta para familias activas."
                    android:inputType="textMultiLine"
                    android:padding="6dp"
                    android:maxLength="150"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tVEsterilizacionMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eTEditarCaracterMascota"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="6dp"
                    android:text="¿La mascota está esterilizada?:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <RadioGroup
                    android:id="@+id/rGEsterilizacionEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVEsterilizacionMascotaEditar"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rBOpcionEsterilizadoEditar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sí"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rBOpcionNoEsterilizadoEditar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tVFechaEsterilizacionMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rGEsterilizacionEditar"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="6dp"
                    android:text="Fecha de esterilización:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/eTEditarFechaEsterilizacionMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVFechaEsterilizacionMascotaEditar"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Seleccione la fecha de esterilización"
                    android:focusable="false"
                    android:inputType="datetime|date"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tVDomicilioMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/eTEditarFechaEsterilizacionMascota"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="6dp"
                    android:text="Domicilio actual de la mascota:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <RadioGroup
                    android:id="@+id/rGDomicilioMascotaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVDomicilioMascotaEditar"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rBOpcionRefugioEditar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Refugio"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rBOpcionHogarTemporalEditar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hogar temporal (Voluntario)"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </RadioGroup>

                <TextView
                    android:id="@+id/tVEditarHogarMascota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rGDomicilioMascotaEditar"
                    android:layout_marginTop="10dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="6dp"
                    android:text="Si selecciona 'Hogar Temporal', elija al voluntario con quien la mascota reside actualmente."
                    android:textColor="@color/black"
                    android:textStyle="italic"
                    android:textSize="16sp"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spHogarTemporalEditar"
                    android:background="@drawable/border"
                    android:contextClickable="false"
                    android:padding="0dp"
                    android:layout_below="@id/tVEditarHogarMascota"/>

                <Button
                    android:id="@+id/btnGuardarCambiosMascota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spHogarTemporalEditar"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true"
                    android:text="GUARDAR"
                    android:textStyle="bold"
                    android:textSize="12sp" />

            </RelativeLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lLBarraProgresoEditarMascota"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone"
            android:background="@color/white"
            android:layout_gravity="center">

            <ProgressBar
                android:id="@+id/barraProgresoEditarMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:elevation="10dp"
                android:indeterminateTint="@color/lila"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lila"
                android:text="Guardando, por favor espere..."/>
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>