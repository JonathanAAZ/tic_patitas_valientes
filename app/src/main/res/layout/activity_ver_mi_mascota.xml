<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:background="@color/yellow"
    android:descendantFocusability="blocksDescendants"
    tools:context=".Vista.VerMiMascotaActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lYVerMiMascota"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarVerMiMascota"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/ic_retroceder"
            android:clickable="true"
            android:backgroundTint="@color/lila"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloVerMiMascota"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lila"
            android:text="Información de mi mascota"/>

        <View
            android:id="@+id/viewTituloVerMiMascota"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloVerMiMascota"
            android:background="@color/yellow" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bordes_fragment"
        android:backgroundTint="@color/gray"
        android:layout_below="@+id/lYVerMiMascota">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rLInformacionMiMascota"
                    android:padding="5dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/frame_redondeado">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tVNombreMiMascota"
                        android:paddingTop="15dp"
                        android:hint="Cargando.."
                        android:textAlignment="center"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textStyle="bold"
                        android:textColor="@color/lila"/>

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:id="@+id/iVFotoMiMascota"
                        android:layout_below="@id/tVNombreMiMascota"
                        android:background="@drawable/border"
                        android:backgroundTint="@color/celeste"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:padding="10dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/tVEncEspecieMiMascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iVFotoMiMascota"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:text="Especie:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVEspecieMiMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iVFotoMiMascota"
                        android:layout_toEndOf="@+id/tVEncEspecieMiMascota"
                        android:padding="6dp"
                        android:text=""
                        android:hint="Cargando..."
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVEncSexoMiMascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVEspecieMiMascota"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:text="Sexo:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVSexoMiMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVEspecieMiMascota"
                        android:layout_toEndOf="@+id/tVEncEspecieMiMascota"
                        android:padding="6dp"
                        android:hint="Cargando..."
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVEncColorMiMascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVSexoMiMascota"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:text="Color:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVColorMiMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVSexoMiMascota"
                        android:layout_toEndOf="@+id/tVEncEspecieMiMascota"
                        android:padding="6dp"
                        android:hint="Cargando..."
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVEncRazaMiMascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVColorMiMascota"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:text="Raza:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVRazaMiMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVColorMiMascota"
                        android:layout_toEndOf="@+id/tVEncEspecieMiMascota"
                        android:padding="6dp"
                        android:hint="Cargando..."
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVEncEsterilizMiMascota"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVRazaMiMascota"
                        android:padding="6dp"
                        android:layout_marginStart="10dp"
                        android:text="Fecha de esterilización:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/tVEsterilizMiMascota"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tVRazaMiMascota"
                        android:layout_toEndOf="@+id/tVEncEsterilizMiMascota"
                        android:padding="6dp"
                        android:hint="Cargando..."
                        android:textColor="@color/black"
                        android:textSize="18sp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/rLHistorialMedico"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:background="@drawable/bordes_fragment">

                    <TextView
                        android:id="@+id/tVTituloHistorialMed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"
                        android:text="HISTORIAL MÉDICO"
                        style="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/lila"
                        android:textAlignment="center"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:id="@+id/lLOpcionesHistorialMed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lLBtnVacunas"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_lista"
                                android:backgroundTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Vacunas"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lLDesparasitaciones"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackgroundBorderless"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_lista"
                                android:backgroundTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Desparasitaciones"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fLHistorialMedico"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:visibility="visible">

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>
            
        </ScrollView>


    </RelativeLayout>

</RelativeLayout>