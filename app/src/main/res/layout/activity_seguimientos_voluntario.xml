<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:background="@color/yellow"
    tools:context=".Vista.SeguimientosVoluntarioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lYSuperiorSeguimientosVol"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarSeguimientosVol"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/ic_retroceder"
            android:clickable="true"
            android:backgroundTint="@color/lila"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloSeguimientosVol"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lila"
            android:text="Seguimientos del voluntario"/>

        <View
            android:id="@+id/viewTituloSeguimientosVol"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloSeguimientosVol"
            android:background="@color/yellow" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rLSeguimientosVol"
        android:layout_below="@+id/lYSuperiorSeguimientosVol"
        android:layout_marginTop="1dp"
        android:background="@drawable/bordes_fragment"
        android:padding="15dp">

        <TextView
            android:id="@+id/tVOpcionAccionSeguimientosVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione la acción que desea realizar:"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lYBtnCambiarSeguimientosVol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tVOpcionAccionSeguimientosVol"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lLBtnAsignarSeguimientos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_seguimiento"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Asignar seguimientos"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lLBtnSeguimientosAsig"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/black"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_seguimiento"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Seguimientos asignados"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rLAsignarSeguimientos"
            android:padding="5dp"
            android:visibility="visible"
            android:layout_below="@+id/lYBtnCambiarSeguimientosVol">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tVTituloSeguimientosDisp"
                android:text="SEGUIMIENTOS DISPONIBLES"
                android:textAlignment="center"
                android:textColor="@color/lila"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tVNoHaySeguimientosDisponibles"
                android:textSize="16sp"
                android:textAlignment="center"
                android:visibility="gone"
                android:textColorHint="@color/black"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tVTituloSeguimientosDisp"
                android:hint="---- No hay seguimientos disponibles ----"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tVNoHaySeguimientosDisponibles"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="visible"
                android:id="@+id/recyViewAsignarSegui"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rLSeguimientosAsignados"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_below="@+id/lYBtnCambiarSeguimientosVol">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tVTituloSeguimientosAsig"
                android:text="SEGUIMIENTOS DEL VOLUNTARIO"
                android:textAlignment="center"
                android:textColor="@color/lila"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tVNoTieneSeguimientos"
                android:textSize="16sp"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/black"
                android:layout_below="@+id/tVTituloSeguimientosAsig"
                android:hint="---- Aún no tiene seguimientos asignados ----"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tVNoTieneSeguimientos"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="visible"
                android:id="@+id/recyViewSeguiAsignados"/>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>