<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Vista.EditarDomicilioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rLSuperiorEditarDomicilio"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarEditarDomicilio"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_retroceder"
            android:backgroundTint="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloEditarDomicilio"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Editar domicilio"/>

        <View
            android:id="@+id/viewTituloEditarDomicilio"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloEditarDomicilio"
            android:background="@color/black" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@id/rLSuperiorEditarDomicilio">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollEditarDomicilio">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/labelEditarDomicilio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:text="INFORMACIÓN DE DOMICILIO"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/labelEditarPais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelEditarDomicilio"
                    android:layout_marginTop="40dp"
                    android:padding="6dp"
                    android:text="País:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etEditarPais"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelEditarPais"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:text="Ecuador"
                    android:focusable="false"
                    android:inputType="text"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/labelEditarProvincia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etEditarPais"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Provincia"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!--        <EditText-->
                <!--            android:id="@+id/etEditarProvincia"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:layout_below="@id/labelEditarProvincia"-->
                <!--            android:background="@drawable/border"-->
                <!--            android:ems="10"-->
                <!--            android:hint=""-->
                <!--            android:inputType="text"-->
                <!--            android:padding="0dp"-->
                <!--            android:textSize="12sp" />-->

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spEditarProvinciaDomicilio"
                    android:background="@drawable/border"
                    android:padding="6dp"
                    android:layout_below="@id/labelEditarProvincia"/>

                <TextView
                    android:id="@+id/labelEditarCanton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spEditarProvinciaDomicilio"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Cantón:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <!--        <EditText-->
                <!--            android:id="@+id/etEditarCanton"-->
                <!--            android:layout_width="100dp"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:layout_below="@id/labelEditarCanton"-->
                <!--            android:background="@drawable/border"-->
                <!--            android:ems="10"-->
                <!--            android:hint=""-->
                <!--            android:inputType="text"-->
                <!--            android:padding="0dp"-->
                <!--            android:textSize="12sp" />-->

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spEditarCantonDomicilio"
                    android:background="@drawable/border"
                    android:padding="6dp"
                    android:layout_below="@id/labelEditarCanton"/>

                <TextView
                    android:id="@+id/labelEditarParroquia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spEditarCantonDomicilio"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Parroquia:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etEditarParroquia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelEditarParroquia"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese la parroquia"
                    android:inputType="text"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/labelEditarBarrio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etEditarParroquia"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Barrio:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etEditarBarrio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelEditarBarrio"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese el barrio"
                    android:inputType="text"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/labelEditarCalles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etEditarBarrio"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Calles:"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etEditarCalles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelEditarCalles"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese las calles"
                    android:inputType="text"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btnGuardarCambiosDomicilio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etEditarCalles"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:layout_centerHorizontal="true"
                    android:text="GUARDAR" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barraProgresoEditarDomicilio"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:elevation="10dp"
                    android:visibility="gone"/>

            </RelativeLayout>

        </ScrollView>

    </FrameLayout>

</RelativeLayout>