<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:background="@color/yellow"
    tools:context=".Vista.CatalogoMascotasActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lYSuperiorCatalogoMascotas"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarCatalogoMascotas"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/ic_retroceder"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="@color/lila"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloCatalogoMascotas"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lila"
            android:text="Catálogo de mascotas"/>

        <View
            android:id="@+id/viewTituloCatalogoMascotas"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloCatalogoMascotas"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rLCatalogoMascotas"
        android:background="@drawable/bordes_fragment"
        android:layout_below="@+id/lYSuperiorCatalogoMascotas">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:id="@+id/tVTituloCatalogoMascotas2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/lila"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:text="Agrupación &quot;Patitas Valientes&quot;"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tVSubtituloCatalogoMascotas"
            android:layout_below="@+id/tVTituloCatalogoMascotas2"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="Encuentra a tu nuevo amigo y brindale un hogar lleno de amor"/>

        <TextView
            android:id="@+id/tVInstruccionBusquedaCatalogoMascotas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tVSubtituloCatalogoMascotas"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="textEnd"
            android:text="A continuación, puede buscar utilizando el nombre de la mascota o seleccionar un FILTRO:"
            android:textColor="@color/blue_2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lYFiltroBusquedaCatalogoMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tVInstruccionBusquedaCatalogoMascotas"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <SearchView
                android:id="@+id/searchViewCatalogoMascotas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:queryHint="Buscar por nombre"
                android:iconifiedByDefault="false"
                android:focusable="false"
                android:background="@drawable/border" />

            <ImageView
                android:id="@+id/ivFiltroCatalogoMascotas"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_filtro"
                android:background="@drawable/border"
                android:backgroundTint="@color/blue_2"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Ícono de filtro" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/gLMostrarFiltrosCatalogoMascotas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lYFiltroBusquedaCatalogoMascotas"
            android:background="@drawable/frame_redondeado"
            android:columnCount="2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:visibility="gone"
            android:rowCount="4">

            <!-- Etiqueta principal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:text="Buscar:"
                android:textColor="@color/blue_2"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tVQuitarFiltrosCatalogoMascotas"
                android:layout_gravity="end"
                android:layout_marginEnd="1dp"
                android:padding="2dp"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:text="Quitar filtro seleccionado"
                android:background="@drawable/borde_rojo"
                android:textColor="@color/red"
                android:textStyle="bold" />


            <!-- Filtros -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVCachorros"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Cachorros"
                android:textColor="@color/blue_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVAdultos"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Adultos"
                android:textColor="@color/blue_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVCaninos"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Caninos"
                android:textColor="@color/blue_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVFelinos"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Felinos"
                android:textColor="@color/blue_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVMachos"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Machos"
                android:textColor="@color/blue_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVHembras"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Hembras"
                android:textColor="@color/blue_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVVacunados"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Vacunados"
                android:textColor="@color/blue_2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tVEsterilizados"
                android:layout_columnWeight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="3dp"
                android:text="Esterilizados"
                android:textColor="@color/blue_2" />

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVNoHayResultados"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_below="@+id/gLMostrarFiltrosCatalogoMascotas"
            android:hint="---- No se encontraron resultados ----"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_above="@+id/lLBotonVerRequisitosCatalogo"
            android:layout_below="@+id/tVNoHayResultados"
            android:background="@drawable/borde_cuadrado"
            android:id="@+id/recyViewCatalogoAdopcion"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lLBotonVerRequisitosCatalogo"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:focusable="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_margin="5dp"
            android:backgroundTint="@color/turquoise"
            android:backgroundTintMode="multiply"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_checklist"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ver requisitos de adopción"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>