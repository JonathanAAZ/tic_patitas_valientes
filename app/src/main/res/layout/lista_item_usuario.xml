<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rLItemUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFotoListaUsuario"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:backgroundTint="@color/celeste"
            android:background="@drawable/border"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/tvEncNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivFotoListaUsuario"
            android:text="Nombre:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNombreListaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tvEncNombre"
            android:hint="Cargando..."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEncCedula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNombreListaUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivFotoListaUsuario"
            android:text="Cédula:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCedulaListaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNombreListaUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tvEncCedula"
            android:hint="Cargando..."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEncRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvEncCedula"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivFotoListaUsuario"
            android:text="Rol en el sistema:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRolListaUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCedulaListaUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tvEncRol"
            android:hint="Cargando..."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEncEstadoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRolListaUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivFotoListaUsuario"
            android:text="Estado:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEstadoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvRolListaUsuario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tvEncEstadoUsuario"
            android:hint="Cargando..."
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/lYBtnEditarUsuario"
            android:layout_marginTop="10dp"
            android:layout_marginStart="150dp"
            android:orientation="vertical"
            android:layout_below="@+id/tvEstadoUsuario"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivEditarUsuarioLista"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@color/blue_2"
                app:srcCompat="@drawable/baseline_edit_note_24" />

            <TextView
                android:id="@+id/tvEditarUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:text="Editar"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Sección Activar/Desactivar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lYBtnEliminarUsuario"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvEstadoUsuario"
            android:layout_toEndOf="@+id/lYBtnEditarUsuario"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/ivEliminarUsuarioLista"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tvActivarDesactivarUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:focusable="true"
                android:text="Cargando..."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>

