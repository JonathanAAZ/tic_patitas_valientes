<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    tools:context=".Vista.CrearVoluntarioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lYSuperiorCrearVoluntario"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarCrearVoluntario"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/ic_retroceder"
            android:clickable="true"
            android:backgroundTint="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloCrearVoluntario"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Crear cuenta de voluntario"/>

        <View
            android:id="@+id/viewTituloCrearCuenta"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloCrearVoluntario"
            android:background="@color/black" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_below="@id/lYSuperiorCrearVoluntario">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollCrearVoluntario">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvEncabezadoCrearVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="INFORMACIÓN DEL\nVOLUNTARIO"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNombreVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEncabezadoCrearVoluntario"
                    android:layout_marginTop="50dp"
                    android:padding="6dp"
                    android:text="Nombre:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etNombreVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNombreVoluntario"
                    android:ems="10"
                    android:hint="Ingrese el nombre completo del nuevo voluntario"
                    android:inputType="text|textPersonName"
                    android:padding="6dp"
                    android:textSize="16sp"
                    android:maxLength="50"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZáéíóúÁÉÍÓÚñÑ "
                    android:background="@drawable/border"/>

                <TextView
                    android:id="@+id/tvCorreoVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etNombreVoluntario"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Correo electrónico:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCorreoVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCorreoVoluntario"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese el correo electrónico del usuario"
                    android:inputType="text|textWebEmailAddress"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tVErrorCorreoVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etCorreoVoluntario"
                    android:text="* Por favor, ingrese un correo válido"
                    android:textStyle="italic"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_light"/>

                <TextView
                    android:id="@+id/tvCedulaVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVErrorCorreoVoluntario"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Cédula de identidad:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etCedulaVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvCedulaVoluntario"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese la cédula de identidad"
                    android:inputType="number"
                    android:padding="6dp"
                    android:maxLength="10"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tVErrorCedulaVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etCedulaVoluntario"
                    android:text="* Por favor, ingrese una cédula válida"
                    android:textStyle="italic"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_light"/>

                <TextView
                    android:id="@+id/tvFechaNacVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVErrorCedulaVoluntario"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Fecha de nacimiento (dd/mm/aaaa):"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etFechaNacVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvFechaNacVoluntario"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Seleccione la fecha de nacimiento"
                    android:inputType="datetime|date"
                    android:focusable="false"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEstadoCivVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etFechaNacVoluntario"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Estado civil:"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <RadioGroup
                    android:id="@+id/rgEstCivOpsVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvEstadoCivVoluntario"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbOpcionSoltero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Soltero"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rbOpcionCasado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Casado"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rbOpcionDivorciado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Divorciado"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rbOpcionViudo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Viudo"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <RadioButton
                        android:id="@+id/rbOpcionUnion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Unión de hecho"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tvOcupacionVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rgEstCivOpsVoluntario"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Profesión/ocupación:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etOcupacionVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvOcupacionVoluntario"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese la profesión/ocupación"
                    android:inputType="text"
                    android:padding="6dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvTelefonoVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etOcupacionVoluntario"
                    android:layout_marginTop="10dp"
                    android:padding="6dp"
                    android:text="Número de teléfono/celular:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etTelefonoVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTelefonoVoluntario"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:hint="Ingrese el número de teléfono"
                    android:inputType="number"
                    android:padding="6dp"
                    android:maxLength="10"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tVErrorTelefonoVoluntario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etTelefonoVoluntario"
                    android:text="* Por favor, ingrese un número de teléfono válido"
                    android:textStyle="italic"
                    android:visibility="gone"
                    android:textColor="@android:color/holo_red_light"/>

                <Button
                    android:id="@+id/btnGuardarVoluntario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tVErrorTelefonoVoluntario"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="50dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:text="GUARDAR" />

            </RelativeLayout>
        </ScrollView>

    </FrameLayout>

</RelativeLayout>