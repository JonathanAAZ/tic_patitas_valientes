<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Vista.EditarFotoPerfilActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lYSuperiorEditarFotoPerfil"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarEditarFotoPerfil"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_retroceder"
            android:backgroundTint="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloEditarFotoPerfil"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Editar foto de perfil"/>

        <View
            android:id="@+id/viewTituloEditarFotoPerfil"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloEditarFotoPerfil"
            android:background="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_below="@+id/lYSuperiorEditarFotoPerfil"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelEncabezadoEditarFotoPerfil"
            android:text="FOTO DE PERFIL"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/ivFotoPerfilSubida"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:background="@drawable/frame_redondeado"
            android:padding="10dp"
            android:layout_below="@+id/labelEncabezadoEditarFotoPerfil"/>

<!--        <Button-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/btnSeleccionarFotoPerfilEditar"-->
<!--            android:layout_below="@+id/ivFotoPerfilSubida"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:padding="5dp"-->
<!--            style="@style/Widget.MaterialComponents.CardView"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:textStyle="italic"-->
<!--            android:text="Seleccione una foto" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lLSeleccionarFotoPerfilEditar"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center"
            android:focusable="true"
            android:clickable="true"
            android:backgroundTint="@color/gray"
            android:backgroundTintMode="multiply"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/border"
            android:layout_below="@+id/ivFotoPerfilSubida">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/black"
                android:background="@drawable/ic_galeria"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subir una foto"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGuardarFotoPerfilEditada"
            android:layout_below="@id/lLSeleccionarFotoPerfilEditar"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Actualizar foto"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/barraProgresoEditarFotoPerfil"
            style="?android:attr/progressBarStyleLarge"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:visibility="gone"/>


    </RelativeLayout>

</RelativeLayout>