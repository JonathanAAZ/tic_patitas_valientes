<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".Vista.Fragments.ListaMascotasAdopcionFragment">

    <LinearLayout
        android:id="@+id/lYFiltroBusquedaMascotasAdopcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <SearchView
            android:id="@+id/searchViewMascotasAdopcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="Buscar por nombre"
            android:iconifiedByDefault="false"
            android:focusable="false"
            android:background="@drawable/border" />

        <ImageView
            android:id="@+id/ivFiltro"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_filtro"
            android:background="@drawable/border"
            android:backgroundTint="@color/blue_2"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ãcono de filtro" />
    </LinearLayout>

