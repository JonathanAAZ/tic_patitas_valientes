<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:backgroundTint="@color/yellow"
        android:padding="2dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVSalirObservacionesRechazo"
            android:backgroundTint="@color/red"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_margin="5dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_cerrar"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVEncMotivoRechazoSolicitud"
            android:layout_below="@+id/iVSalirObservacionesRechazo"
            android:textAlignment="center"
            android:textColor="@color/lila"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:text=""/>

        <EditText
            android:id="@+id/etMotivoRechazoSolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tVEncMotivoRechazoSolicitud"
            android:layout_margin="20dp"
            android:background="@drawable/border"
            android:ems="10"
            android:hint="Ingrese las observaciones respectivas"
            android:inputType="textMultiLine"
            android:maxLength="400"
            android:padding="6dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lLEnviarMotivoRechazo"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/etMotivoRechazoSolicitud"
            android:backgroundTint="@color/blue_2"
            android:backgroundTintMode="multiply"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/border">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/ic_enviar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Enviar"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>