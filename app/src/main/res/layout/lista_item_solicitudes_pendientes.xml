<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/rLItemSolicitudPendiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/iVIconoSolicitudPendiente"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_solicitud"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/tVEncNombreSolicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/iVIconoSolicitudPendiente"
            android:text="Solicitante:"
            android:textColor="@color/lila"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tVNombreSolicitantePend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tVEncNombreSolicitante"
            android:hint="Cargando..."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tVEncMascotaPend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/iVIconoSolicitudPendiente"
            android:layout_below="@+id/tVNombreSolicitantePend"
            android:text="Mascota:"
            android:textSize="16sp"
            android:textColor="@color/lila"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tVMascotaPend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tVEncMascotaPend"
            android:layout_below="@+id/tVNombreSolicitantePend"
            android:hint="Cargando..."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tVEncFechaEmisionPend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/iVIconoSolicitudPendiente"
            android:layout_below="@+id/tVMascotaPend"
            android:text="Fecha emisión:"
            android:textSize="16sp"
            android:textColor="@color/lila"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tVFechaEmisionPend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tVEncFechaEmisionPend"
            android:layout_below="@+id/tVMascotaPend"
            android:hint="Cargando..."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tVEncEstadoSoliPend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/iVIconoSolicitudPendiente"
            android:layout_below="@+id/tVFechaEmisionPend"
            android:text="Estado:"
            android:textSize="16sp"
            android:textColor="@color/lila"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tVEstadoSoliPend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/tVEncEstadoSoliPend"
            android:layout_below="@+id/tVFechaEmisionPend"
            android:hint="Cargando..."
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lLBotonVerSolicitudPendiente"
            android:orientation="horizontal"
            android:padding="5dp"
            android:focusable="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/turquoise"
            android:visibility="gone"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/border"
            android:layout_below="@+id/tVEstadoSoliPend">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/ic_ver_clave"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responder solicitud"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lLBotonConfirmarAdopcion"
            android:orientation="horizontal"
            android:padding="5dp"
            android:focusable="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/light_green"
            android:visibility="gone"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/border"
            android:layout_below="@+id/lLBotonVerSolicitudPendiente">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/ic_visto_bueno"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar adopción"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>