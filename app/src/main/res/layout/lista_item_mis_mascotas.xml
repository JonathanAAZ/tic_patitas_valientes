<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rLItemMiMascota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFotoListaMiMascota"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tVNombreMiMascota"
            android:background="@drawable/border"
            android:backgroundTint="@color/celeste"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/tVNombreMiMascota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textColor="@color/lila"
            android:textStyle="bold"
            android:hint="Cargando..."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tVEncFechaUltimaVacuna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivFotoListaMiMascota"
            android:layout_below="@+id/tVNombreMiMascota"
            android:text="Última vacuna:"
            android:textColor="@color/lila"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tVFechaUltimaVacuna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/ivFotoListaMiMascota"
            android:layout_below="@+id/tVEncFechaUltimaVacuna"
            android:hint="Cargando..."
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tVEncFechaUltimaDesparasitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivFotoListaMiMascota"
            android:layout_below="@+id/tVFechaUltimaVacuna"
            android:text="Última desparasitación:"
            android:textColor="@color/lila"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tVFechaUltimaDesparasitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/ivFotoListaMiMascota"
            android:layout_below="@+id/tVEncFechaUltimaDesparasitacion"
            android:hint="Cargando..."
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lLBtnVerMiMascota"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:focusable="true"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:visibility="visible"
            android:layout_toEndOf="@+id/ivFotoListaMiMascota"
            android:backgroundTint="@color/celeste"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/border"
            android:layout_below="@+id/tVFechaUltimaDesparasitacion">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/ic_huella_mascota"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver información"
                android:layout_marginStart="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>