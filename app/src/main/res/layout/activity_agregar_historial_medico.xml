<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:focusableInTouchMode="true"
    android:background="@color/yellow"
    tools:context=".Vista.AgregarHistorialMedicoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lYSuperiorAgregarHistorialMed"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iVRegresarAgregarHistorial"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:background="@drawable/ic_retroceder"
            android:clickable="true"
            android:backgroundTint="@color/lila"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tVTituloAgregarHistorial"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lila"
            android:text="Agregar historial médico"/>

        <View
            android:id="@+id/viewTituloResponderSolicitud"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tVTituloAgregarHistorial"
            android:background="@color/yellow" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollAgregarHistorial"
        android:layout_below="@+id/lYSuperiorAgregarHistorialMed"
        android:background="@drawable/bordes_fragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fLFragmentAgregarHistorial"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="INFORMACIÓN DE VACUNA"
                android:id="@+id/tVEncabezadoAgregarHistorial"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:textColor="@color/lila"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tVNombreHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVEncabezadoAgregarHistorial"
                android:layout_marginTop="50dp"
                android:padding="6dp"
                android:text="Nombre:"
                android:textColor="@color/lila"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/eTNombreVacuna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVNombreHistorial"
                android:background="@drawable/border"
                android:ems="10"
                android:maxLength="50"
                android:hint="Ingrese el nombre de la vacuna"
                android:inputType="text|textPersonName"
                android:padding="6dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tVFechaColocacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eTNombreVacuna"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text="Fecha de colocación:"
                android:textColor="@color/lila"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/eTFechaColocacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVFechaColocacion"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Seleccione la fecha de colocación"
                android:focusable="false"
                android:inputType="datetime|date"
                android:padding="6dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tVFechaProximaColocacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/eTFechaColocacion"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text="Fecha de próxima colocación:"
                android:textColor="@color/lila"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/eTFechaProximaColocacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVFechaProximaColocacion"
                android:background="@drawable/border"
                android:ems="10"
                android:hint="Seleccione la fecha de colocación"
                android:focusable="false"
                android:padding="6dp"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rLCamposDesparasitacion"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_below="@+id/eTFechaProximaColocacion">

                <!-- Primera columna: Peso de la mascota -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:gravity="bottom"> <!-- Alineamos el contenido en la parte inferior -->

                    <TextView
                        android:id="@+id/tVPesoMascotaDesp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="6dp"
                        android:text="Peso de la mascota:"
                        android:textColor="@color/lila"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/eTPesoMascotaDesp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:maxLength="8"
                        android:hint="Libras"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Segunda columna: Cantidad de desparasitante -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:gravity="bottom"> <!-- Alineamos el contenido en la parte inferior -->

                    <TextView
                        android:id="@+id/tVCantidadDesparasitante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="6dp"
                        android:text="Cantidad de desparasitante:"
                        android:textColor="@color/lila"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/eTCantidadDesparasitante"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="Centímetros"
                        android:focusable="false"
                        android:enabled="false"
                        android:padding="6dp"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tVHoraRecordatorio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rLCamposDesparasitacion"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:text="Hora para recordatorios (Opcional):"
                android:textColor="@color/lila"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/eTHoraRecordatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVHoraRecordatorio"
                android:background="@drawable/border"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="10dp"
                android:text="08:00"
                android:focusable="false"
                android:inputType="datetime|date"
                android:padding="6dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tVMensajeHora"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:textColor="@color/blue_2"
                android:textAlignment="center"
                android:layout_below="@+id/eTHoraRecordatorio"
                android:text="Este campo define la hora en la que se enviarán las notificaciones de recordatorio para la próxima colocación. Si no se selecciona una hora, las notificaciones se enviarán por defecto a las 08:00"/>


            <Button
                android:id="@+id/btnGuardarHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tVMensajeHora"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/lila"
                android:layout_centerHorizontal="true"
                android:text="GUARDAR"
                android:textStyle="bold"/>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lLBarraProgresoAgregarHistorial"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_gravity="center">

        <ProgressBar
            android:id="@+id/barraProgresoAgregarHistorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/lila"
            style="?android:attr/progressBarStyleLarge"
            android:elevation="10dp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/lila"
            android:text="Por favor, espere mientras se guarda la información, esto puede tardar dependiendo de su conexión a Internet."/>
    </LinearLayout>
</RelativeLayout>