<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Vista.Fragments.SolicitudesAdopcionPendientesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tVTituloFragmentSolicitudesPendientes"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text="Solicitudes de adopciÃ³n pendientes"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tVNoHaySolicitudesPendientes"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_below="@id/tVTituloFragmentSolicitudesPendientes"
        android:hint="---- No tiene solicitudes pendientes ----"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyViewSolicitudesPendientes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_below="@+id/tVNoHaySolicitudesPendientes"
        android:padding="2dp"
        android:background="@color/white"/>

</RelativeLayout>