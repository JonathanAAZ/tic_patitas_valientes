<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa 1: fondo blanco con solo esquinas superiores redondeadas y borde -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />

            <!-- Esquinas solo arriba -->
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />

            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Capa 2: patrón de huellitas grises y transparente encima -->
    <item>
        <bitmap
            android:src="@drawable/huellitas"
            android:tileMode="repeat"
            android:gravity="center"
            android:tint="@android:color/darker_gray"
            android:alpha="0.2"/> <!-- baja este valor para más transparencia -->
    </item>

</layer-list>